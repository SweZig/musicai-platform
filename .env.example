# ─── App ────────────────────────────────────────
APP_ENV=development
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
API_HOST=0.0.0.0
API_PORT=8000

# ─── PostgreSQL ──────────────────────────────────
DATABASE_URL=postgresql+asyncpg://musicai:musicai_pass@db:5432/musicai_db
DATABASE_URL_SYNC=postgresql://musicai:musicai_pass@db:5432/musicai_db
POSTGRES_USER=musicai
POSTGRES_PASSWORD=musicai_pass
POSTGRES_DB=musicai_db

# ─── Redis ───────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ─── MinIO (S3-kompatibel fillagring) ────────────
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_RAW=raw-uploads
MINIO_BUCKET_PROCESSED=processed
MINIO_BUCKET_SAMPLES=samples
MINIO_BUCKET_GENERATED=generated

# ─── ML / AI ─────────────────────────────────────
# Sätt till true om GPU finns
USE_GPU=false
# CLAP-modell (laddas ned automatiskt vid första start)
CLAP_MODEL=laion/clap-htsat-unfused
# MusicGen (kommentera ut om du inte vill ladda den stora modellen)
# MUSICGEN_MODEL=facebook/musicgen-melody

